<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    
    <item android:state_pressed="true">
        <shape >
            <gradient 
                android:startColor="#EE0000"
                android:endColor="#EE0000"
                android:angle="270">
                </gradient>
                <stroke 
                    android:width="1dp"
                    android:color="#f403c9">      
                </stroke>
                <corners android:radius="2dp"/>
                <padding android:left="10dp" 
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp"
                    />
        </shape>       
    </item>
    <item 
        android:state_focused="true">
        <shape >
            <gradient android:startColor="#ffc2b7"
                      android:endColor="#ffc2b7"
                      android:angle="270"/>
            <stroke 
                    android:width="1dp"
                    android:color="#f403c9">      
                </stroke>
                <corners android:radius="2dp"/>
                <padding android:left="10dp" 
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp"
                    />           
        </shape>       
    </item>
    <item>
        <shape >
            <gradient android:startColor="#000000"
                      android:endColor="#81f8d0"
                      android:angle="180"/>
            <stroke 
                    android:width="1dp"
                    android:color="#f403c9">      
                </stroke>
                <corners android:radius="5dp"/>
                <padding android:left="10dp" 
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp"
                    />           
        </shape>       
        
    </item>

</selector>